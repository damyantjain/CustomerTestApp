<UserControl x:Class="CustomerTestApp.WPF.Views.CustomerEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerTestApp.WPF.Views" 
             xmlns:viewModels="clr-namespace:CustomerTestApp.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:CustomerEditViewModel />
    </UserControl.DataContext>
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Customer ID:"/>
            <TextBox Text="{Binding SelectedCustomer.Id}" IsReadOnly="True"/>
            <TextBlock Text="First Name:"/>
            <TextBox Text="{Binding SelectedCustomer.FirstName, Mode=TwoWay}"/>
            <TextBlock Text="Last Name:"/>
            <TextBox Text="{Binding SelectedCustomer.LastName, Mode=TwoWay}"/>
            <TextBlock Text="Email:"/>
            <TextBox Text="{Binding SelectedCustomer.Email, Mode=TwoWay}" />
            <TextBlock Text="Discount:"/>
            <TextBox Text="{Binding SelectedCustomer.Discount, Mode=TwoWay}" />
            <Button Content="Save" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
